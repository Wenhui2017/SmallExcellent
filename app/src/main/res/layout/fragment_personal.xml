<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/stateColor"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_head"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="小优"
            android:textSize="24sp"
            android:textColor="@color/background_personal_item"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/personal_view_background"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_money"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_money"
                android:layout_width="35dp"
                android:layout_height="35dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color_personal"
                android:layout_centerVertical="true"
                android:text="工资单"
                android:layout_toRightOf="@id/iv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
            <View
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/item_diem_personal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_recode"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_recode"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color_personal"
                android:layout_centerVertical="true"
                android:text="兼职记录"
                android:layout_toRightOf="@id/iv_recode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
            <View
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/item_diem_personal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <ImageView
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:id="@+id/iv_collection"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/iv_collection"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:textColor="@color/text_color_personal"
                android:layout_centerVertical="true"
                android:text="收藏"
                android:layout_toRightOf="@id/iv_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
            <View
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/item_diem_personal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_personal_info"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon_info"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color_personal"
                android:layout_centerVertical="true"
                android:text="我的简历"
                android:layout_toRightOf="@id/iv_personal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
            <View
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/item_diem_personal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <View
            android:background="@color/personal_view_background"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="38dp">
            <ImageView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/iv_personal_setting"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_setting"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_color_personal"
                android:layout_centerVertical="true"
                android:text="设置"
                android:layout_toRightOf="@id/iv_personal_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="15dp" />
            <View
                android:layout_marginLeft="60dp"
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="@color/item_diem_personal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>